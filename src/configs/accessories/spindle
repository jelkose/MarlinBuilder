opt_set SPINDLE_LASER_ACTIVE_STATE    LOW

# Required when using LASER_FEATURE since
# https://github.com/MarlinFirmware/Marlin/commit/43d9d1ce1bc708f178612da0baa972c2f8fbe712
# (Missing in sanity check)
opt_set CUTTER_POWER_MAX 100
opt_set CUTTER_POWER_UNIT RPM
opt_set SPEED_POWER_MIN 5000
opt_set SPEED_POWER_MAX 30000
opt_set SPEED_POWER_STARTUP 5000

opt_enable \
    SPINDLE_FEATURE \
    SPINDLE_LASER_USE_PWM

echo "- Configured for spindle settings" >> README.md